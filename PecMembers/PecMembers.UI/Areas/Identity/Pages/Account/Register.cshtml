@page
@model RegisterModel
@{
    ViewData["Title"] = "Գրանցում";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <br />
            <br />
            <div class="card-group">
                <div class="card p-4">
                    <div class="card-body">
                      
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="card-header text-white bg-info">
                                <h6>Ստեղծել նոր User</h6>
                            </div>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                @*<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>*@
                            </div>
                            <button type="submit" class="btn btn-primary">Գրանցել</button>
                        </form>

                    </div>
                </div>
                <div class="card-header text-white bg-success" style="flex:0.8">
                    <div class="card-body text-center">
                        <div>
                            <h5><i class="fa fa-warning fa-lg mt-4"></i> ՏԸՀ անդամներ</h5>
                            <h5><i class="fa fa-warning fa-lg mt-4"></i> Ավտոմատացնած</h5>
                            <h5><i class="fa fa-warning fa-lg mt-4"></i> Համակարգ</h5>
                            <hr class="bg-white" />
                            <div class="right-img">
                                <img src="~/img/sLogo.png" style="width:50%" />
                            </div>
                            <hr class="bg-white" />
                            <p class="margin-top-10 text-left text-center">
                                <h6><i class="fa fa-warning fa-lg mt-4"></i>Համակարգը նախատեսված է իրականացնելու ընտրությունների նախապատրաստման ընթացքում ՏԸՀ անդամների առցանց գրանցնամ գործընթացը:</h6>
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
